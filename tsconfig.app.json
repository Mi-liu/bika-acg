{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@common/*": [
        "./common/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
